import unittest
from metier.critere import Critere
from metier.UserNonAuthentifie import UserNonAuthentifie  # Importez la classe depuis le fichier UserNonAuthentifie.py

class TestUserNonAuthentifie(unittest.TestCase):

    def setUp(self):
        # Initialisation des objets nécessaires pour les tests
        self.critere = Critere()  # Vous pouvez initialiser le critère selon vos besoins
        self.user_non_authentifie = UserNonAuthentifie(self.critere)

    def test_rechercher_stage_without_criteria(self):
        # Teste si rechercher_stage lève une exception si aucun critère n'est défini
        with self.assertRaises(Exception):
            self.user_non_authentifie.rechercher_stage()

    def test_rechercher_stage_with_valid_criteria(self):
        # Teste si rechercher_stage fonctionne correctement avec un critère valide
        result = self.user_non_authentifie.rechercher_stage(self.critere)
        # Assurez-vous de vérifier que le résultat correspond à ce que vous attendez

    def test_rechercher_stage_with_invalid_criteria(self):
        # Teste si rechercher_stage lève une exception avec un critère invalide
        invalid_criteria = "Critere invalide"
        with self.assertRaises(Exception):
            self.user_non_authentifie.rechercher_stage(invalid_criteria)

    # Ajoutez d'autres méthodes de test pour les autres fonctions de votre classe

if __name__ == '__main__':
    unittest.main()
